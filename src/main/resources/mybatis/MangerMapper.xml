<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.liontalk.springbootshiro.dao.ManagerDao">

    <resultMap id="BaseColumnResultMap" type="cn.liontalk.springbootshiro.entity.ManagerEntity">
        <id property="userId" column="user_id" jdbcType="INTEGER"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="dept_id" jdbcType="INTEGER" property="deptId"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="mobile" jdbcType="VARCHAR" property="mobile"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>


    <sql id="BaseColumn">
      z.`user_id` ,
      z.`username` ,
      z.`name` ,
      z.`password`,
      z.`dept_id` ,
      z.`email`,
      z.`mobile` ,
      z.`status` ,
      z.`user_id_create`,
      z.`create_time` ,
      z.`update_time`
    </sql>

    <select id="queryAllManager" resultMap="BaseColumnResultMap">
        SELECT
        <include refid="BaseColumn"/>
        FROM sys_manager as z where z.status = 1
    </select>

    <select id="queryManagerById" resultMap="BaseColumnResultMap">
        SELECT
        <include refid="BaseColumn"/>
        FROM sys_manager as z where z.status = 1 and z.user_id = #{userId}
    </select>


    <select id="findManagerByName" resultMap="BaseColumnResultMap">
        select
        <include refid="BaseColumn"/>
        from sys_manager as z WHERE z.username = #{username}
    </select>


    <insert id="insertManager" parameterType="cn.liontalk.springbootshiro.entity.ManagerEntity">
      INSERT INTO
      sys_manager (username,name,password,dept_id,email,mobile,status,user_id_create,create_time,update_time)
      VALUES (#{username},#{name},#{password},#{deptId},#{email},#{mobile},#{status},#{userIdCreate},now(),now())
    </insert>


    <update id="updateManager" parameterType="cn.liontalk.springbootshiro.entity.ManagerEntity">
        UPDATE `sys_manager`
        SET
         `username` = #{username},
         `name` = #{name},
         `password` = #{password},
         `dept_id` = #{deptId},
         `email` = #{email},
         `mobile` = #{mobile},
         `status` = #{status},
         `user_id_create` = #{userIdCreate},
         `create_time` = now(),
         `update_time` = now()
        WHERE
            `user_id` = #{userId};
    </update>


    <delete id="deleteManager" parameterType="list">
        UPDATE `sys_manager` SET status = 0
        WHERE user_id in
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </delete>
</mapper>